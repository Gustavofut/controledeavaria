  <label for="scriptUrl">URL do App Script</label>
  <input type="text" id="scriptUrl" placeholder="Cole aqui o URL do seu App Script" required>

  <button type="button" onclick="enviarFormulario()">Enviar</button>

  <div class="success-message" id="successMessage">Registro realizado com sucesso!</div>
