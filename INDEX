<script>
  function enviarFormulario() {
    const data = document.getElementById('data').value;
    const or = document.getElementById('or').value;
    const nota = document.getElementById('nota').value;
    const produto = document.getElementById('produto').value;
    const fornecedor = document.getElementById('fornecedor').value;
    const marca = document.getElementById('marca').value;
    const tipoAvaria = document.getElementById('tipoAvaria').value;
    const responsavel = document.getElementById('responsavel').value;
    const qntd = document.getElementById('qntd').value;
    const categoria = document.getElementById('categoria').value;
    const scriptUrl = document.getElementById('scriptUrl').value;

    if (!data || !or || !nota || !produto || !fornecedor || !marca || !tipoAvaria || !responsavel || !qntd || !categoria || !scriptUrl) {
      alert("Preencha todos os campos!");
      return;
    }

    const payload = {
      Data: data,
      OR: or,
      NotaFiscal: nota,
      Produto: produto,
      Fornecedor: fornecedor,
      Marca: marca,
      TipoDeAvaria: tipoAvaria,
      Responsavel: responsavel,
      Qntd: qntd,
      Categoria: categoria
    };

    fetch(scriptUrl, {
      method: 'POST',
      body: JSON.stringify(payload),
      headers: { 'Content-Type': 'application/json' }
    })
    .then(response => {
      if (response.ok) {
        document.getElementById('successMessage').style.display = 'block';
        document.querySelectorAll('input, select').forEach(el => el.value = '');
      } else {
        alert('Erro ao enviar. Verifique o URL do App Script.');
      }
    })
    .catch(error => {
      console.error(error);
      alert('Erro ao enviar. Verifique o URL do App Script.');
    });
  }
</script>

