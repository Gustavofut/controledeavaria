  <script>
    const form = document.getElementById("auditoriaForm");
    const msg = document.getElementById("msg");

    form.addEventListener("submit", function(e) {
      e.preventDefault();

      const data = Object.fromEntries(new FormData(form).entries());

      fetch("https://script.google.com/macros/s/AKfycbxaGwWwTlJ7wBMIjxHUI55XnbCR_KYg0DOOLf10u3SrbWyMK8kI-Xtpv_3HMADeZXYvhA/exec", {
        method: "POST",
        body: JSON.stringify(data)
      })
      .then(res => res.text())
      .then(txt => {
        form.reset(); // limpa os campos
        msg.style.display = "block"; // mostra aviso de sucesso
        setTimeout(() => msg.style.display = "none", 3000); // some depois de 3s
      })
      .catch(err => alert("Erro ao enviar: " + err));
    });
  </script>
